@model IEnumerable<PharmaProject.Models.Table>

@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">



    <table class="table table-bordered">
        <tr>
            <th style="font-size:x-large">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="font-size:x-large">
                @Html.DisplayNameFor(model => model.Comapny)
            </th>
            <th style="font-size:x-large">
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th style="font-size:x-large">
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th style="font-size:x-large">
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th style="font-size:x-large">
                @Html.DisplayNameFor(model => model.Postal)
            </th>
            <th style="font-size:x-large">
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th style="font-size:x-large">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th style="font-size:x-large">
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th style="font-size:x-large">
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="font-size:medium">
                    @Html.DisplayFor(modelItem => item.Name)
                    </td>
                <td style="font-size:medium">
                    @Html.DisplayFor(modelItem => item.Comapny)
                </td>
                <td style="font-size:medium">
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td style="font-size:medium">
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td style="font-size:medium">
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td style="font-size:medium">
                    @Html.DisplayFor(modelItem => item.Postal)
                </td>
                <td style="font-size:medium">
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td style="font-size:medium">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td style="font-size:medium">
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td style="font-size:medium">
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td style="font-size:medium">
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

