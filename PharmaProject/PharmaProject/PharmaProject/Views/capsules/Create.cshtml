@model PharmaProject.Models.capsule

@{
    ViewBag.Title = "Create";
}



@using (Html.BeginForm("Create", "capsules", FormMethod.Post, new { @enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()

    <head>
        <!-- Required meta tags-->
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="Colorlib Templates">
        <meta name="author" content="Colorlib">
        <meta name="keywords" content="Colorlib Templates">
        <!-- Title Page-->
        <title>Au Register Forms by Colorlib</title>
        <!-- Icons font CSS-->
        <link href="~/quote/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
        <link href="~/quote/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
        <!-- Font special for pages-->
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">
        <!-- Vendor CSS-->
        <link href="~/quote/vendor/select2/select2.min.css" rel="stylesheet" media="all">
        <link href="~/quote/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">
        <!-- Main CSS-->
        <link href="~/quote/css/main.css" rel="stylesheet" media="all">
    </head>

    <body>
        
            <div class="wrapper wrapper--w790">
                <div class="card card-5">
                    <div class="card-heading">
                        <h2 class="title">Add Capsule</h2>
                    </div>
                    <div class="card-body">
                        <form method="POST">

                            <div class="form-row">
                                <div class="name">Name</div>
                                <div class="value">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "input--style-6" } })
                                    @Html.ValidationMessageFor(model => model.Name, null, new { @class = "form-control" })

                                </div>
                            </div>

                            <div class="form-row">
                                <div class="name">Company</div>
                                <div class="value">
                                    @Html.EditorFor(model => model.company_name, new { htmlAttributes = new { @class = "input--style-6" } })
                                    @Html.ValidationMessageFor(model => model.company_name, null, new { @class = "form-control" })


                                </div>
                            </div>

                            <div class="form-row">
                                <div class="name">Output</div>
                                <div class="value">
                                    @Html.EditorFor(model => model.output, new { htmlAttributes = new { @class = "input--style-6" } })
                                    @Html.ValidationMessageFor(model => model.output, null, new { @class = "form-control" })


                                </div>
                            </div>

                            <div class="form-row">
                                <div class="name">Size</div>
                                <div class="value">
                                    @Html.EditorFor(model => model.size, new { htmlAttributes = new { @class = "input--style-6" } })
                                    @Html.ValidationMessageFor(model => model.size, null, new { @class = "form-control" })


                                </div>
                            </div>

                            <div class="form-row">
                                <div class="name">Dimension</div>
                                <div class="value">
                                    @Html.EditorFor(model => model.dimension, new { htmlAttributes = new { @class = "input--style-6" } })
                                    @Html.ValidationMessageFor(model => model.dimension, null, new { @class = "form-control" })


                                </div>
                            </div>

                            <div class="form-row">
                                <div class="name">Shipping Weight</div>
                                <div class="value">
                                    @Html.EditorFor(model => model.shipping_weight, new { htmlAttributes = new { @class = "input--style-6" } })
                                    @Html.ValidationMessageFor(model => model.shipping_weight, null, new { @class = "form-control" })


                                </div>
                            </div>

                            <div class="form-row">
                                <div class="name">Power</div>
                                <div class="value">
                                    @Html.EditorFor(model => model.Power, new { htmlAttributes = new { @class = "input--style-6" } })
                                    @Html.ValidationMessageFor(model => model.Power, null, new { @class = "form-control" })


                                </div>
                            </div>

                            <div class="form-row">
                                <div class="name">Price</div>
                                <div class="value">
                                    @Html.EditorFor(model => model.Price_, new { htmlAttributes = new { @class = "input--style-6" } })
                                    @Html.ValidationMessageFor(model => model.Price_, null, new { @class = "form-control" })


                                </div>
                            </div>
                                 
                            <div class="form-row">
                                <div class="name">Upload Image</div>
                                <div class="value">
                                    <div class="input-group js-input-file">
                                        <input class="input-file" type="file" name="Imageupload">
                                    </div>
                                  
                                </div>
                            </div>
                                             
                            <div>
                                <button class="btn btn--radius-2 btn--red" type="submit">ADD</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
      
        <!-- Jquery JS-->
        <script src="~/quote/vendor/jquery/jquery.min.js"></script>
        <!-- Vendor JS-->
        <script src="~/quote/vendor/select2/select2.min.js"></script>
        <script src="~/quote/vendor/datepicker/moment.min.js"></script>
        <script src="~/quote/vendor/datepicker/daterangepicker.js"></script>
        <!-- Main JS-->
        <script src="~/quote/js/global.js"></script>
    </body>
}

