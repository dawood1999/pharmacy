@model IEnumerable<PharmaProject.Models.Liquid>

@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<div class="row">
    @foreach (var item in Model)
    {


        <div class="isotope-item col-md-4 col-sm-6">
            <article class="vertical-item content-padding with_border rounded text-left">
                <div class="item-media top_rounded overflow_hidden"> <img src="@Url.Content(item.img)" alt="" style="width:100%;height:300px"> </div>
                <div class="item-content">
                    <center><u><b><h3 style="color:purple"> @item.Name</h3></b></u> </center>
                    <br />
                    <h5>
                        <b style="color:navy">Price :</b>  @item.Price
                        <br /><br />
                        <b style="color:navy">Filling Speed :</b> @item.Filling_speed
                        <br /><br />
                        <b style="color:navy">Filling Range:</b> @item.Filling_range_
                        <br /><br />
                        <b style="color:navy">Capacity :</b> @item.capacity_
                        <br /><br />
                        <b style="color:navy">Air Volume :</b> @item.Air_volume
                        <br /><br />
                        <b style="color:navy">Air Pressure:</b> @item.Air_pressure
                        <br /><br />

                    </h5>
                    
                </div>
            </article>
        </div>


    }
                </div>

