@model IEnumerable<PharmaProject.Models.Tablets>

@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">


<div class="row">
@foreach (var item in Model)
{

    <div class="isotope-item col-md-4 col-sm-6">
        <article class="vertical-item content-padding with_border rounded text-left">
            <div class="item-media top_rounded overflow_hidden"> <img src="@Url.Content(item.photo)" alt="" style="width:100%;height:300px"> </div>
            <div class="item-content">
                <center><u><b><h3 style="color:purple"> @item.Name</h3></b></u> </center>
                <br />
                <h5>
                    <b style="color:navy">Power :</b>  @item.power
                    <br /><br />
                    <b style="color:navy">Pressure :</b> @item.Max_pressure
                    <br /><br />
                    <b style="color:navy">Weight :</b> @item.net_weight
                    <br /><br />
                    <b style="color:navy">Price :</b> @item.Price_
                    <br /><br />
                    <b style="color:navy">Production Capacity :</b> @item.Production_capacity
                    <br /><br />
                    <b style="color:navy">Power:</b> @item.power
                    <br /><br />

                </h5>
                <h4 style="color:crimson">Machine Size: $@item.machine_size</h4>
            </div>
        </article>
    </div>

}
    </div>











